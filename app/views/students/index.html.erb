<h1>Students List</h1>

<table border=2>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= student.first_name%></td>
            <td><%= student.last_name%></td>
            <td><%= student.email%></td>
            <td><%= student.age%></td>
            <td><%= link_to 'View', student%></td>
            <td><%= link_to 'Edit', edit_student_path(student)%></td>
            <td><%= link_to 'Delete', student, data: {turbo_method: :delete, turbo_confirm: 'Dila bechar?'} %></td>
        </tr>
    <%end%>
    </tbody>
</table>
<%= link_to 'New Student', new_student_path%>
